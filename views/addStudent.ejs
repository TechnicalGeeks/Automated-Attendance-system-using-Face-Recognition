<!DOCTYPE html>
<html lang="en">

<%- include('./partials/header.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %> 

    <div class="content">
      <form class="form w-full max-w-lg mx-auto my-20 p-2 rounded-lg bg-white bg-opacity-70" action="/addStudent" method="POST">
          <h2 class="title-font text-2xl font-medium mx-auto mt-6 mb-6 text-center">Add Course</h2>
          <div class="flex flex-wrap -mx-auto mb-6">
            <div class="w-full md:w-1/3 px-3 mb-6 md:mb-6">
              <label class="block uppercase tracking-wide   text-xs font-bold mb-2" for="fname">
              First Name
              </label>
              <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" required id="fname" type="text" placeholder="Enter First Name" name="fname">
            </div>
            <div class="w-full md:w-1/3 px-3 mb-6 md:mb-6">
              <label class="block uppercase tracking-wide   text-xs font-bold mb-2" for="mname">
              Middle Name
              </label>
              <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="mname" name="mname" type="text" placeholder="Enter Middle Name">
            </div>
            <div class="w-full md:w-1/3 px-3 mb-6 md:mb-6">
              <label class="block uppercase tracking-wide   text-xs font-bold mb-2" for="lname">
              Last Name
              </label>
              <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" required id="lname" name="lname" type="text" placeholder="Enter Last Name">
            </div>
            <div class="w-full md:w-1/2 px-3 mb-6 md:mb-6">
              <label class="block uppercase tracking-wide   text-xs font-bold mb-2" for="branch">
              Branch
              </label>
              <select class="block w-full bg-gray-200 border border-gray-200 text-gray-700 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500" required id="branch"  name="branch">
                <option value="" disabled>Enter Branch</option>
                <option value="cs" >Computer Science</option>
                <option value="it"  >Information Technology</option>
                <option value="entc"  >Electronic and Telecommunication Engineering.</option>
              </select>            
            </div>
            <div class="w-full md:w-1/2 px-3 mb-6 md:mb-6">
              <label class="block uppercase tracking-wide   text-xs font-bold mb-2" for="sem">
              Semester
              </label>
              <select class="block w-full bg-gray-200 border border-gray-200 text-gray-700 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500" required id="sem"  name="sem">
                <option value="" disabled>Enter Semester</option>
                <option value="1" >I</option>
                <option value="2"  >II</option>
              </select>            
            </div>
            <div class="w-full md:w-1/3 px-3 mb-6 md:mb-6">
              <label class="block uppercase tracking-wide   text-xs font-bold mb-2" for="year">
              Year
              </label>
              <select class="block w-full bg-gray-200 border border-gray-200 text-gray-700 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500" required id="year"  name="year">
                <option value="" disabled>Enter Year</option>
                <option value="FE" >FE</option>
                <option value="SE"  >SE</option>
                <option value="TE"  >TE</option>
                <option value="BE"  >BE</option>
              </select>            
            </div>
            <div class="w-full md:w-1/3 px-3 mb-6 md:mb-6">
              <label class="block uppercase tracking-wide   text-xs font-bold mb-2" for="div">
              Division
              </label>
              <select class="block w-full bg-gray-200 border border-gray-200 text-gray-700 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500" required id="div"  name="div">
                <option value="" disabled>Enter Division</option>
                <option value="A" >A</option>
                <option value="B"  >B</option>
                <option value="C"  >C</option>
              </select>            
            </div>
            <div class="w-full md:w-1/3 px-3 mb-6 md:mb-6">
              <label class="block uppercase tracking-wide   text-xs font-bold mb-2" for="rollNo">
              Roll No.
              </label>
              <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" required id="rollNo" name="rollNo" type="text" placeholder="Enter Roll No.">            
            </div>

          </div>
         
          <div class="flex flex-wrap -mx-auto mb-6 text-center">
            <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
              <button class="m-2  text-white bg-blue-500 border-2 border-white py-2 px-5 focus:outline-none hover:bg-blue-600 rounded">Submit</button>
            </div>
            <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
              <a><button class="m-2  text-black bg-white border-2 border-black py-2 px-5 focus:outline-none hover:bg-black hover:text-white rounded">Cancel</button></a>       
            </div>
          </div>
      </form>
    </div>


    <%- include('./partials/footer.ejs') %> 

    <!-- JS Scripts -->
  <script>
    function addOther(val,id) {
      console.log(val,id);
      if(val=="0"){
        let subSelect=document.getElementById("subSelect"+id);
        let subInput=document.getElementById("subInput"+id);
        subSelect.style.display="none";
        subSelect.disabled=true;
        subInput.disabled=false;
        subInput.type="text";
      }
      
    }
  </script>
</body>
</html>